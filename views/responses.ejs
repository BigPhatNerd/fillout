<!DOCTYPE html>
<html>
<head>
  <title>Form Response</title>
  <style>
    .none-found {
      height: 100%;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      text-align: center;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  <% if (responses.length > 0) { %>
    <h1>Form Responses</h1>
    <% responses.forEach(function(response) { %>
      <div class="response">
        <h2>Submission ID: <%= response.submissionId %></h2>
        <% response.questions.forEach(function(question) { %>
          <p><strong><%= question.name %>:</strong> <%= question.value %></p>
        <% }); %>
      </div>
    <% }); %> <!-- Close the forEach loop here -->
    <p>Total Responses: <%= totalResponses %></p>
    <% if (typeof pageCount === 'number') { %>
      <p>Page Count: <%= pageCount %></p>
    <% } %>
    <p>Pagination not implemented</p> <!-- This now appears only once, as intended -->
  <% } else { %>
    <h1 class="none-found">🤷‍♂️ No responses found. 🤷‍♂️</h1>
  <% } %>
</body>
</html>
